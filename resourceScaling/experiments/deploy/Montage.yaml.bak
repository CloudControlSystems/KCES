apiVersion: v1
kind: Service
metadata:
  name: task-container-builder
  namespace: cloudcontrol
  labels:
    app: task-container-builder
spec:
  selector:
    app: builder
  ports:
    - port: 7070
      protocol: TCP
      targetPort: 7070
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: task-container-builder-deploy
  namespace: cloudcontrol
  labels:
    app: grpc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: builder
  template:
    metadata:
      labels:
        app: builder
    spec:
      nodeSelector: ##添加的配置
        node-1: "192.168.0.161" ##打的标签是什么，这里就写什么
      volumes:
        - name: log-volume
          hostPath:
            path: /home
        - name: config-volume
          hostPath:
            path: /etc/kubernetes
        - name: current-pem-volume
          hostPath:
            path: /etc/kubernetes/ssl
      #        - name: server-ca-volume
      #          hostPath:
      #            path: /etc/etcd/ssl
      containers:
        - name: task-container-builder-ctr
          #v8.4-task roaming, v8.5 task vertical offloading, baseline: no-scaling algorithm, scaling: resource-scaling algorithm
          image: shanchenggang/task-container-builder:baseline
          imagePullPolicy: IfNotPresent
          #imagePullPolicy: Always
          ports:
            - containerPort: 7070
              hostPort: 7070
          volumeMounts:
            - name: log-volume
              mountPath: /home
            - name: config-volume
              mountPath: /etc/kubernetes
            - name: current-pem-volume
              mountPath: /etc/kubernetes/ssl
          #            - name: server-ca-volume
          #              mountPath: /etc/etcd/ssl
          env:
            #            - name: ETCD_HOST
            #              valueFrom:
            #                configMapKeyRef:
            #                  name: cluster-info
            #                  key: etcd.host
            #            - name: ETCD_PORT
            #              valueFrom:
            #                configMapKeyRef:
            #                  name: cluster-info
            #                  key: etcd.port
            - name: MASTER_IP
              valueFrom:
                configMapKeyRef:
                  name: cluster-inform
                  key: master.ip
            - name: GATHER_TIME
              valueFrom:
                configMapKeyRef:
                  name: cluster-inform
                  key: gather.time
            - name: NODE_NUM
              valueFrom:
                configMapKeyRef:
                  name: cluster-inform
                  key: node.num
            - name: REDIS_SERVER
              valueFrom:
                configMapKeyRef:
                  name: cluster-inform
                  key: redis.server
            - name: REDIS_PORT
              valueFrom:
                configMapKeyRef:
                  name: cluster-inform
                  key: redis.port
#            - name: NAMESPACE_NAME
#              valueFrom:
#                configMapKeyRef:
#                  name: cluster-inform
#                  key: namespace.name
---
apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    app: grpc
  name: cluster-inform
  namespace: cloudcontrol
data:
  #Modify your cluster Master address via shell script
  master.ip: 0.0.0.0
  #the number of cluster node
  node.num: "6"
  #the time interval of gathering data
  gather.time: "500"
  redis.server: 0.0.0.0
  redis.port: "6379"
#  namespace.name: "cloudcontrol"
---
apiVersion: v1
kind: Service
metadata:
  name: workflow-injector
  namespace: cloudcontrol
  labels:
    app: workflow-injector
spec:
  selector:
    app: injector
  ports:
    - port: 7070
      protocol: TCP
      targetPort: 7070
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: workflow-injector-deploy
  namespace: cloudcontrol
  labels:
    app: injector
spec:
  replicas: 1
  selector:
    matchLabels:
      app: injector
  template:
    metadata:
      labels:
        app: injector
    spec:
      nodeSelector: ##添加的配置
        node-2: "192.168.0.162" ##打的标签是什么，这里就写什么
      containers:
        - name: workflow-injector-ctr
          #Constant v9.0, Linear v9.1, Pyramid v9.2
          image: shanchenggang/workflow-injector:v9.0
          imagePullPolicy: IfNotPresent
          #imagePullPolicy: Always
          command: [ "./workflowInjector" ]
          #total number of workflows
          args: [ "10" ]
          ports:
            - containerPort: 7070
              hostPort: 7070
          env:
            - name: TASK_NUMBERS
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: task.numbers
            - name: REDIS_SERVER
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: redis.server
            - name: REDIS_PORT
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: redis.port
            - name: BATCH_NUM
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: batch.num
            - name: INTERVAL_TIME
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: interval.time
            - name: SLOPE_VALUE
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: slope.value
            - name: INITIAL_VALUE
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: initial.value
          volumeMounts:
            - name: dependency-volume
              mountPath: /config
      volumes:
        - name: dependency-volume
          configMap:
            name: dependency-inject
---
apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    app: inject
  name: workflow-inject
  namespace: cloudcontrol
data:
  #task number in one workflow
  task.numbers: "21"
  redis.server: 0.0.0.0
  redis.port: "6379"
  #quantity per batch in Constant Arrival Pattern
  batch.num: "2"
  #time interval (seconds)
  interval.time: "300"
  #slope in Linear or Pyramid Pattern
  slope.value: "2"
  #initial value in Linear or Pyramid Pattern
  initial.value: "2"
---
